<h1>Portfolio Items</h1>

<%= link_to "Create new item", new_portfolio_path %>

<% @portfolio_items.each do |portfolio_item| %>
	<p><%= link_to portfolio_item.title, portfolio_show_path(portfolio_item) %></p> <!-- Rails knows you want to pass id so instead of writing (portfolio_item.id) you write (portfolio_item) -->
	<p><%= portfolio_item.subtitle %></p>
	<p><%= portfolio_item.body %></p>
	<%= image_tag portfolio_item.thumb_image if !portfolio_item.thumb_image.nil? %>
	<%= link_to "Edit", edit_portfolio_path(portfolio_item) %><!-- Rails knows you want to pass id so instead of writing (portfolio_item.id) you write (portfolio_item) -->
	<p><%= link_to 'Delete Portfolio Item', portfolio_path(portfolio_item), method: :delete, data: { confirm: 'Are you sure?' } %></p>
<% end %>